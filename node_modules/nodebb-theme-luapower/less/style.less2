@font-family-sans-serif: Helvetica, Arial, sans-serif;
@navbar-inverse-bg: #000;

.category-item .category-header {
	padding-top: 10px;
	padding-bottom: 10px;
	height: auto;
	min-height: 0;
}

h2 { font-size: 24px; }
h3 { font-size: 20px; }
h4 { font-size: 16px; }

.topic .topic-text {
	font-size: 14px;
	color: #000;
}

.header .header-topic-title {
	text-align: left;
}

.header .header-topic-title span {
	color: #ccc;
}

code {
	background-color: #eee;
	color: #000;
}

